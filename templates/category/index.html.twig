{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
  <h1>Toutes les catégories de séries : </h1>
  {% for category in categories %}
      <div>

          <a href="{{ path("category_show", { categoryName: category.name }) }}">{{ loop.index }} / {{ category.name }}</a>
      </div>
  {% else %}
      Aucune catégorie trouvée.
  {% endfor %}

  <a href="{{ path('app_index') }}">
      Retour à l'accueil
  </a>
{% endblock %}