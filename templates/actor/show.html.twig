{% extends 'base.html.twig' %}
{% block title %}Acteur #{% endblock %}

{% block body %}
    <h2>{{ actor.id }} / {{ actor.name }}</h2>
  {% for program in actor.programs %}
      <div>
          <h2>{{ program.id }} / {{ program.title }}</h2>
          <p>{{ program.synopsis }}</p>
          <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
      </div>
  {% else %}
      Aucune série trouvée.
  {% endfor %}

  <a href="{{ path('app_index') }}">
      Retour à l'accueil
  </a><br/>
  <a href="{{ path('actor_index') }}">
      Retour à la liste des acteurs
  </a>
{% endblock %}