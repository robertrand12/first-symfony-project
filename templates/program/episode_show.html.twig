{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }} Saison #{{ season.number }} épisode #{{ episode.number }}{% endblock %}

{% block body %}
 <div class="media mb-4">
      <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
      <div class="media-body">
          <h1 class="mt-0">{{ program.title }}</h1>
          <h2 class="mt-0">Saison {{ season.number }}</h2>
          <h3 class="mt-0">Episode {{ episode.number }} / {{ episode.title }}</h3>
          <p>Synopsis : {{ episode.synopsis }}</p>    
      </div>
  </div>

  <a href="{{ path('program_index') }}">
      Retour à la liste des programmes
  </a> <br/>
  <a href="{{ path('category_index') }}">
      Retour à la liste des catégories
  </a>
{% endblock %}